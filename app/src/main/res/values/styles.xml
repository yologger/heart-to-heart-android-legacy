<resources
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="Custom.Style.ToolBar" parent="Theme.AppCompat">
        <item name="android:background">@color/color.primary.default</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="Custom.Style.BottomNavigationView" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="android:background">@color/color.primary.default</item>
    </style>

    <style name="Custom.Style.TextView.Normal" parent="Theme.AppCompat">
        <item name="android:textColor">@color/color.text.black</item>
    </style>
    <style name="Custom.Style.TextView.Bold" parent="Theme.AppCompat">
        <item name="android:textColor">@color/color.text.black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Custom.Style.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/color.text.white</item>
        <item name="android:textColorHint">@color/color.text.white</item>
    </style>

    <style name="Custom.Style.ToggleButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textOn">Following</item>
        <item name="android:textOff">Follow</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">@dimen/radius_xs</item>
        <item name="android:paddingBottom">@dimen/radius_xs</item>
        <item name="android:paddingStart">@dimen/radius_lg</item>
        <item name="android:paddingEnd">@dimen/radius_lg</item>
        <item name="android:textColor">@drawable/selector_toggle_button_textcolor</item>
        <item name="android:background">@drawable/selector_toggle_button_background</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Custom.Style.ToggleButton.Like" parent="TextAppearance.AppCompat.Button">
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/selector_toggle_button_like_background</item>
    </style>

    <style name="Custom.Style.TextView.Body1.Normal" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Custom.Style.TextView.Body1.Bold" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Custom.Style.TextView.Body2.Normal" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>